<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 2.5//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/2.5/template-install.dtd">
<extension version="3.0" type="template" client="site">
	<name>apptheme</name>
	<version>1.2</version>
	<creationDate>5/30/2013</creationDate>
	<author>Kyle Ledbetter</author>
	<authorEmail>support@pixelpraise.com</authorEmail>
	<copyright>Copyright (C) 2005 - 2012 Pixel Praise, LLC. All rights reserved.</copyright>
	<description>TPL_APPTHEME_XML_DESCRIPTION</description>
	<files>
		<filename>component.php</filename>
		<filename>favicon.ico</filename>
		<filename>index.html</filename>
		<filename>index.php</filename>
		<filename>templateDetails.xml</filename>
		<filename>template_preview.png</filename>
		<filename>template_thumbnail.png</filename>
		<folder>css</folder>
		<folder>fonts</folder>
		<folder>html</folder>
		<folder>images</folder>
		<folder>img</folder>
		<folder>js</folder>
		<folder>language</folder>
		<folder>less</folder>
	</files>
	<positions>
		<position>debug</position>
		<position>position-0</position>
		<position>position-1</position>
		<position>position-2</position>
		<position>position-3</position>
		<position>position-4</position>
		<position>position-5</position>
		<position>position-6</position>
		<position>position-7</position>
		<position>position-8</position>
		<position>position-9</position>
		<position>position-10</position>
		<position>position-11</position>
		<position>position-12</position>
		<position>position-13</position>
		<position>position-14</position>
		<position>footer</position>
	</positions>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.tpl_apptheme.ini</language>
		<language tag="en-GB">en-GB/en-GB.tpl_apptheme.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="advanced">
				<field name="theme" type="list" default="mac"
					label="TPL_APPTHEME_FIELD_THEME_LABEL"
					description="TPL_APPTHEME_FIELD_THEME_DESC"
					filter="word"
				>
					<option value="mac">TPL_APPTHEME_OPTION_MAC</option>
					<option value="carbon">TPL_APPTHEME_OPTION_CARBON</option>
					<option value="sepia">TPL_APPTHEME_OPTION_SEPIA</option>
					<option value="ironman">TPL_APPTHEME_OPTION_IRONMAN</option>
					<option value="masterchief">TPL_APPTHEME_OPTION_MASTERCHIEF</option>
					<option value="dribbble">TPL_APPTHEME_OPTION_DRIBBBLE</option>
				</field>
				<field name="templateColor" class="" type="color" default="#08C"
					label="TPL_APPTHEME_COLOR_LABEL"
					description="TPL_APPTHEME_COLOR_DESC" />

				<field name="templateBackgroundColor" class="" type="color" default="#F4F6F7"
					label="TPL_APPTHEME_BACKGROUND_COLOR_LABEL"
					description="TPL_APPTHEME_BACKGROUND_COLOR_DESC" />

				<field name="logoFile" class="" type="media" default=""
					label="TPL_APPTHEME_LOGO_LABEL"
					description="TPL_APPTHEME_LOGO_DESC" />

			</fieldset>
		</fields>
	</config>
</extension>
